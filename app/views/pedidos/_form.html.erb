<%= form_for(@pedido) do |f| %>
  <% if @pedido.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pedido.errors.count, "error") %> prohibited this pedido from being saved:</h2>
      <ul>
      <% @pedido.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <label class="control-label" for="cliente_id">Cliente</label>
    <div class="controls">
      <select id="cliente_id" name="pedido[cliente_id]">
        <% @clientes.each do |cliente| %>
          <option value="<%= cliente.id %>"><%= cliente.nombres %> <%= cliente.apellido_paterno %> <%= cliente.apellido_materno %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="field">
    <%= f.label :fecha_pedido %><br />
    <%= f.date_select :fecha_pedido %>
  </div>
  <div class="form-actions">
    <%= f.submit 'Guardar', :class=>'btn btn-primary' %>
  </div>
<% end %>

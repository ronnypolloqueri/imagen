
<h1><%= @docente.nombre %></h1>

<div class="page-header">
  <h2>Lista clientes</h2>
</div>
<table class="table">
  <thead>  
  <tr>
    <th>Nombres</th>
    <th>Apellido paterno</th>
    <th>Apellido materno</th>
    <th>Teléfonos</th>
    <th>Correo electrónico</th>
    <th>Dirección</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @clientes.each do |cliente| %>
  <tr>
    <td><%= cliente.nombres %></td>
    <td><%= cliente.apellido_paterno %></td>
    <td><%= cliente.apellido_materno %></td>
    <td><%= cliente.telefonos %></td>
    <td><%= cliente.correo_electronico %></td>
    <td><%= cliente.direccion %></td>
    <td>
      <div class="btn-group">
        <button class="btn">Acciones</button>
        <button class="btn btn-success dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
        </button>
          <ul class="dropdown-menu">
            <li>
              <%= link_to 'Detalle del cliente', cliente %>
            </li>
            <li>
              <%= link_to 'Editar cliente', edit_cliente_path(cliente) %>
            </li>
            <li>
                <%= link_to 'Eliminar al cliente', cliente, method: :delete, data: { confirm: '¿Está seguro?' } %>
            </li>
          </ul>
      </div>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'Agregar cliente', new_cliente_path, :class=>"btn btn-primary" %>